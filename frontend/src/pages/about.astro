---
import Layout from '../layouts/Layout.astro';
---

<Layout title="About">
  <main>
    <div id='main-content'>
      <span>Work in progress</span>
    </div>

    <style>
      body {
        margin: 0;
        height: 100vh;
        width: 100vw;
        overflow: hidden;
      }

      main {
        display: flex;
        margin: 2rem;
        height: -webkit-fill-available;
      }

      #main-content {
        color: blue;
        flex: 1;
        display: grid;
        grid-template-rows: auto;
        grid-template-columns: auto;
        justify-items: center;
        align-items: center;
      }

      span {
        grid-row: 1;
        grid-column: 1;
        text-transform: uppercase;
        text-align: center;
        font-size: 4vw;
        font-weight: 700;
      }
    </style>
  </main>
</Layout>
