<style>
  div.content {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: xx-large;
  }

  div.rotating-role {
    display: grid;
    margin: 0.5ch;
  }

  span.role {
    grid-row: 1;
    grid-column: 1;
  }

  span.role.current:empty:before {
    content: 'UX designer';
    animation: cycle-text 3s linear infinite;
  }
  span.role.current {
    border-style: solid;
    border-color: white;
    border-width: 1px;
    border-radius: 12px;
    padding: 0 0.5ch;
    line-height: normal;
    width: 10ch;
    display: flex;
    justify-content: center;
  }

  @keyframes cycle-text {
    0% {
      content: 'UX designer';
    }
    22.2% {
      content: 'UX designer';
      opacity: 1;
    }
    27.75% {
      opacity: 0;
    }
    33.3% {
      content: 'pet parent';
      opacity: 1;
    }
    55.5% {
      content: 'pet parent';
      opacity: 1;
    }
    61.05% {
