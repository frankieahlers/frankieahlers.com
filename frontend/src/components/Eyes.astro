    #eyes-container {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      /* (eye width (100) + border (5)) * 2 + 5 */
      width: 225px;
    }

    .eye {
      width: 100px;
      height: 100px;
      border: 5px solid black;
      border-radius: 50%;
      display: grid;
    }

    .pupil {
      background-color: black;
      width: 50px;
      height: 50px;
      border-radius: 50%;
      margin: 10px;
    }
  </style>
